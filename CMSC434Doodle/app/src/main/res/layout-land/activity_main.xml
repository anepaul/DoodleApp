<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/content_main" />

    <me.anepaul.cmsc434doodler.VerticalSeekBar
        android:id="@+id/main_sb_seek"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:visibility="invisible"
        android:layout_gravity="end|top"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="@dimen/fab_margin"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab_color"
        style="@style/DoodleFloatingActionButtonLand"
        android:layout_marginTop="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab_size"
        style="@style/DoodleFloatingActionButtonLand"
        android:src="@android:drawable/ic_menu_add"
        android:visibility="invisible"
        android:layout_marginTop="80dp"  />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab_opacity"
        style="@style/DoodleFloatingActionButtonLand"
        android:src="@android:drawable/ic_menu_view"
        android:visibility="invisible"
        android:layout_marginTop="150dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab_save"
        style="@style/DoodleFloatingActionButtonLand"
        android:src="@android:drawable/ic_menu_save"
        android:visibility="invisible"
        android:layout_marginTop="220dp" />

</android.support.design.widget.CoordinatorLayout>
